<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Text" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:lineSpacingExtra">@dimen/medium_line_spacing</item>
    </style>

    <style name="Base.Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:lineSpacingExtra">@dimen/medium_line_spacing</item>
    </style>

    <style name="Text.Medium.Bold" parent="Base.Text.Medium">
        <item name="android:textStyle">bold</item>
    </style>
</resources>