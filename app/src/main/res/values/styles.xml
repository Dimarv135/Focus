<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputHintActive" parent="Widget.Design.TextInputLayout">
        <item name="android:gravity">top</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputHintError" parent="AppTheme">
        <item name="android:thumb">@color/greyDark</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="android:colorControlNormal">@color/red</item>
        <item name="android:textStyle">normal</item>
        <item name="colorAccent">@color/red</item>
        <item name="hintTextColor">@color/red</item>
    </style>
    <style name="TextInputHint">
        <item name="android:gravity">top</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>
